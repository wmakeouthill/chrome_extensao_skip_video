{
  "manifest_version": 3,
  "name": "Auto Skip Video - Pular Vídeos Automaticamente",
  "short_name": "Auto Skip Video",
  "version": "1.0.1",
  "description": "Pula automaticamente para o próximo vídeo quando o atual termina em Shorts, Reels, TikTok e outras plataformas",
  "author": "Auto Skip Video",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://www.tiktok.com/*",
    "https://www.instagram.com/*",
    "https://kwai.com/*",
    "https://www.pinterest.com/*",
    "https://www.reddit.com/*",
    "https://x.com/*",
    "https://twitter.com/*",
    "https://9gag.com/*",
    "https://imgur.com/*",
    "https://www.twitch.tv/*",
    "https://www.tumblr.com/*",
    "https://likee.video/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://www.tiktok.com/*",
        "https://www.instagram.com/*",
        "https://kwai.com/*",
        "https://www.pinterest.com/*",
        "https://www.reddit.com/*",
        "https://x.com/*",
        "https://twitter.com/*",
        "https://9gag.com/*",
        "https://imgur.com/*",
        "https://www.twitch.tv/*",
        "https://www.tumblr.com/*",
        "https://likee.video/*"
      ],
      "js": [
        "js/core.js",
        "js/video-observer.js",
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/logo-16.png",
      "48": "icons/logo-48.png",
      "128": "icons/logo-128.png"
    }
  },
  "icons": {
    "16": "icons/logo-16.png",
    "48": "icons/logo-48.png",
    "128": "icons/logo-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "autoskipvideo@example.com",
      "strict_min_version": "121.0"
    }
  }
}